{{#if addNewAnswer}}
<h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="answer_author">Author</label>
        {{input value=answer_author id="answer_author"}}
      </div>
      <div class="form-group">
        <label for="answer_content">Content</label>
        {{input value=answer_content id="answer_content"}}
      </div>
      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
